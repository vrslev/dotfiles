#!/usr/bin/env bash
set -xeuo pipefail

bash -c '
set -xeuo pipefail
brew update
brew bundle --file ./config/Brewfile
brew upgrade --greedy-latest
brew bundle cleanup --file ./config/Brewfile --zap --force
brew cleanup
' &

bash -c '
set -xeuo pipefail
mise self-update --yes
mise upgrade --yes
mise prune --yes
mise reshim --yes
' &

wait
