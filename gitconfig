[user]
	name = Lev Vereshchagin
	email = mail@vrslev.com

[core]
	editor = nvim
	excludesfile = ~/.gitignore

[diff]
    tool = nvim

[merge]
  tool = nvim

[help]
	autoCorrect = 1

[color]
	ui = auto

[init]
	defaultBranch = main

[alias]
	a = add
	ch = checkout
	chm = checkout main
	cm = commit -m
	p = push
    l = log --oneline --decorate --color --graph
    d =!git diff --name-only --relative --diff-filter=d | xargs bat --diff
    st = status
