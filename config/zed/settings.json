// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette
{
	"assistant": {
		"default_model": {
			"provider": "ollama",
			"model": "llama3.1:latest"
		},
		"version": "2"
	},
	"base_keymap": "VSCode",
	"features": {
		"inline_completion_provider": "none"
	},
	"telemetry": {
		"diagnostics": false,
		"metrics": false
	},
	"ui_font_size": 15,
	"buffer_font_size": 15,
	"theme": {
		"mode": "system",
		"light": "Github Light",
		"dark": "Github Dark"
	},
	"autosave": {
		"after_delay": {
			"milliseconds": 100
		}
	},
	"show_call_status_icon": false,
	"terminal": {
		"font_family": "FiraCode Nerd Font",
		"copy_on_select": true,
		"font_size": 14
	},
	// "format_on_save": "on", // TODO
	"languages": {
		"Python": {
			"language_servers": ["pyright", "ruff", "pylsp"],
			"code_actions_on_format": {
				"source.organizeImports.ruff": true,
				"source.fixAll.ruff": true
			},
			"formatter": [{ "language_server": { "name": "ruff" } }]
		},
		"JavaScript": {
			"code_actions_on_format": {
				"source.fixAll.biome": true,
				"source.organizeImports.biome": true
			},
			"formatter": [{ "language_server": { "name": "biome" } }]
		},
		"TypeScript": {
			"code_actions_on_format": {
				"source.fixAll.biome": true,
				"source.organizeImports.biome": true
			},
			"formatter": [{ "language_server": { "name": "biome" } }]
		},
		"JSX": {
			"code_actions_on_format": {
				"source.fixAll.biome": true,
				"source.organizeImports.biome": true
			},
			"formatter": [{ "language_server": { "name": "biome" } }]
		},
		"TSX": {
			"code_actions_on_format": {
				"source.fixAll.biome": true,
				"source.organizeImports.biome": true
			},
			"formatter": [{ "language_server": { "name": "biome" } }]
		},
		"JSON": {
			"code_actions_on_format": {
				"source.fixAll.biome": true,
				"source.organizeImports.biome": true
			},
			"formatter": [{ "language_server": { "name": "biome" } }]
		},
		"JSONC": {
			"code_actions_on_format": {
				"source.fixAll.biome": true,
				"source.organizeImports.biome": true
			},
			"formatter": [{ "language_server": { "name": "biome" } }]
		},
		"CSS": {
			"code_actions_on_format": {
				"source.fixAll.biome": true,
				"source.organizeImports.biome": true
			},
			"formatter": [{ "language_server": { "name": "biome" } }]
		}
	},
	"lsp": {
		"pyright": {
			"python": {
				"pythonPath": ".venv/bin/python"
			},
			"settings": {
				"python.analysis": {
					"diagnosticMode": "workspace",
					"typeCheckingMode": "off"
				}
			}
		},
		"pylsp": {
			"initialization_options": {
				"settings": {
					"python": {
						"pythonPath": ".venv/bin/python"
					}
				}
			},
			"settings": {
				"plugins": {
					"rope": {
						"enabled": true
					},
					"pylint": {
						"enabled": false
					},
					"pycodestyle": {
						"enabled": false
					},
					"jedi_symbols": {
						"enabled": true
					},
					"jedi_definition": {
						"enabled": true
					},
					"jedi_references": {
						"enabled": true
					},
					"jedi_hover": {
						"enabled": true
					},
					"jedi_completion": {
						"enabled": true
					},
					"jedi_signature_help": {
						"enablded": true
					},
					"jedi": {
						"environment": {
							"PYTHONPATH": ".venv"
						}
					},
					"pylsp_mypy": {
						"enabled": true,
						"dmypy": true,
						"overrides": ["--python-executable", ".venv/bin/python", true]
					}
				}
			}
		}
	}
}
