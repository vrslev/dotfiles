[user]
	name = Lev Vereshchagin
	email = mail@vrslev.com

# Work config
[includeIf "gitdir:~/web/"]
    path = ~/web/.gitconfig

[core]
	editor = code
	pager = delta

[diff]
    tool = code
    colorMoved = default

[merge]
  	tool = code
	conflictstyle = diff3

[help]
	autoCorrect = 10


[init]
	defaultBranch = main

[alias]
	a = add
	ch = checkout
	chm = checkout main
	cm = commit -m
	p = push
    l = log --oneline --decorate --color --graph
    d = diff
    ds = diff --staged
    st = status

[rerere]
	enabled = true

[branch]
	sort = -committerdate

[fetch]
	prune = true

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true    # use n and N to move between diff sections
    # light = true      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
	true-color = always

[delta "light"]
    light = true
    syntax-theme = GitHub

[delta "dark"]
    dark = true
    syntax-theme = Visual Studio Dark+

[color]
	ui = auto

[column]
	ui = auto
