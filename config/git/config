[user]
	name = Lev Vereshchagin
	email = mail@vrslev.com

# Work config
[includeIf "gitdir:~/web/"]
    path = ~/web/.gitconfig

[core]
	editor = code
	pager = delta

[diff]
    tool = vscode
    colorMoved = default

[difftool "vscode"]
    cmd = code --wait --diff $LOCAL $REMOTE

[merge]
  	tool = code
	conflictstyle = diff3

[help]
	autoCorrect = 10

[init]
	defaultBranch = main

[alias]
	a = add
	ch = checkout
	main = !git checkout main || git checkout master
	cm = commit -m
	p = push
    l = log --oneline --decorate --color --graph
    d = diff
    ds = diff --staged
    st = status
	rm-merged = !git branch --format '%(refname:short) %(upstream:track)' | awk '$2 == \"[gone]\" { print $1 }' | xargs -r git branch -D
	sync = !git main && git pull --prune && git rm-merged

[branch]
	sort = -committerdate

[fetch]
	prune = true

[pull]
	rebase = true

[push]
	autoSetupRemote = true

[rebase]
	autoStash = true

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true

[color]
	ui = auto

[column]
	ui = auto
