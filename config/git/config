[core]
	editor = nvim
	excludesfile = ~/.gitignore

[diff]
    tool = nvim

[merge]
  tool = nvim

[help]
	autoCorrect = 1

[color]
	ui = auto

[init]
	defaultBranch = main

[alias]
	a = add
	ch = checkout
	chm = checkout main
	cm = commit -m
	p = push
    l = log --oneline --decorate --color --graph
    d = diff
    ds = diff --staged
    st = status

[rerere]
	enabled = true

[column]
	ui = auto

[branch]
	sort = -committerdate
