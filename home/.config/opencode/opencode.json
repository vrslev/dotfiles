{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "provider": {
    "work": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Work LLM",
      "options": {
        "baseURL": "{env:MAIN_OPENAI_BASE_URL}",
        "apiKey": "{env:MAIN_OPENAI_AUTH_TOKEN}"
      },
      "models": {
        "{env:MAIN_OPENAI_MODEL}": {}
      }
    },
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      },
      "models": {
        "devstral": {},
        "gpt-oss": {}
      }
    }
  }
}
