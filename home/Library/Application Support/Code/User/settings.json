{
  "[css]": {
    "editor.defaultFormatter": "vscode.css-language-features"
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[less]": {
    "editor.defaultFormatter": "vscode.css-language-features"
  },
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "[scss]": {
    "editor.defaultFormatter": "vscode.css-language-features"
  },
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "$schema": "vscode://schemas/settings/user",
  "biome.requireConfigFile": true,
  "chat.commandCenter.enabled": false,
  "commitollama.custom.model": "qwen2.5-coder:1.5b-instruct",
  "commitollama.model": "Custom",
  "continue.disableQuickFix": true,
  "continue.pauseCodebaseIndexOnStart": true,
  "continue.pauseTabAutocompleteOnBattery": true,
  "continue.showInlineTip": false,
  "continue.telemetryEnabled": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.fontFamily": "FiraCode Nerd Font",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "file",
  "editor.formatOnType": true,
  "editor.inlayHints.maximumLength": 0,
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,
  "editor.scrollbar.horizontalScrollbarSize": 7,
  "editor.scrollbar.verticalScrollbarSize": 7,
  "editor.stickyScroll.enabled": true,
  "emmet.triggerExpansionOnTab": true,
  "errorLens.enabledDiagnosticLevels": [
    "error",
    "warning"
  ],
  "errorLens.messageBackgroundMode": "message",
  "errorLens.messageTemplate": "$message ($code)",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmPasteNative": false,
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 300,
  "files.exclude": {
    "**/__pycache__": true,
    "**/.coverage*": true,
    "**/.mypy_cache": true,
    "**/.pytest_cache": true,
    "**/.ruff_cache": true,
    "**/coverage.xml": true
  },
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.ignoredRepositories": [
    "/opt/homebrew"
  ],
  "git.mergeEditor": true,
  "git.openRepositoryInParentFolders": "always",
  "git.replaceTagsWhenPull": true,
  "gitlens.cloudPatches.enabled": false,
  "gitlens.codeLens.enabled": false,
  "gitlens.currentLine.enabled": false,
  "gitlens.launchpad.indicator.polling.enabled": false,
  "gitlens.plusFeatures.enabled": false,
  "gitlens.statusBar.enabled": false,
  "gitlens.views.commits.avatars": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "markdown.preview.typographer": true,
  "mypy-type-checker.ignorePatterns": [
    "**/.mypy_cache",
    "**/.venv"
  ],
  "mypy-type-checker.importStrategy": "fromEnvironment",
  "mypy-type-checker.preferDaemon": true,
  "mypy-type-checker.reportingScope": "workspace",
  "mypy.runUsingActiveInterpreter": true,
  "prettier.requireConfig": true,
  "python.analysis.autoFormatStrings": true,
  "python.analysis.autoImportCompletions": true,
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.extraCommitChars": true,
  "python.analysis.generateWithTypeAnnotation": true,
  "python.analysis.gotoDefinitionInStringLiteral": true,
  "python.analysis.inlayHints.functionReturnTypes": true,
  "python.analysis.inlayHints.pytestParameters": true,
  "python.analysis.packageIndexDepths": [
    {
      "depth": 2,
      "name": "django"
    },
    {
      "depth": 2,
      "name": "fastapi"
    },
    {
      "depth": 4,
      "name": "litestar"
    },
    {
      "depth": 4,
      "name": "polyfactory"
    }
  ],
  "python.analysis.supportRestructuredText": true,
  "python.createEnvironment.trigger": "off",
  "python.terminal.activateEnvironment": false,
  "redhat.telemetry.enabled": false,
  "ruff.lint.ignore": [
    "F841",
    "T201"
  ],
  "ruff.showSyntaxErrors": false,
  "rust-analyzer.check.command": "clippy",
  "rust-analyzer.inlayHints.typeHints.enable": false,
  "scm.diffDecorations": "gutter",
  "scm.repositories.sortOrder": "name",
  "security.workspace.trust.enabled": false,
  "terminal.external.osxExec": "Ghostty.app",
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.defaultProfile.osx": "fish",
  "terminal.integrated.detectLocale": "off",
  "terminal.integrated.enableImages": true,
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.hideOnStartup": "whenEmpty",
  "terminal.integrated.inheritEnv": false,
  "terminal.integrated.minimumContrastRatio": 1,
  "terminal.integrated.showExitAlert": false,
  "terminal.integrated.stickyScroll.enabled": true,
  "terminal.integrated.tabs.hideCondition": "never",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typos.config": "~/.config/typos.toml",
  "vs-kubernetes": {
    "vs-kubernetes.crd-code-completion": "disabled",
    "vs-kubernetes.disable-context-info-status-bar": true,
    "vs-kubernetes.disable-namespace-info-status-bar": true,
    "vs-kubernetes.enable-minimal-workflow": true
  },
  "vscode-kubernetes.kubectl-path": "/usr/local/bin/vscode-kubectl-stub",
  "window.autoDetectColorScheme": true,
  "window.newWindowDimensions": "maximized",
  "workbench.activityBar.location": "bottom",
  "workbench.colorTheme": "Default Light Modern",
  "workbench.layoutControl.enabled": false,
  "workbench.list.smoothScrolling": true,
  "workbench.startupEditor": "none",
  "workbench.tips.enabled": false,
  "zenMode.centerLayout": false,
  "zenMode.fullScreen": false
}
